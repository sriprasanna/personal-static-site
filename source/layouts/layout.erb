        </li>
      </ul>
      <section class="top-bar-section">
        <ul class="left">
          <li>
            <a href="#">Blog</a>
          </li>
          <li>
            <a href="#">Projects</a>
          </li>
          <li>
            <a href="#">Resume</a>
          </li>
        </ul>
       </section>
     </nav>

    <div class="row">
      <div class="columns" id="main-container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>